{
  "name": "next-15-cache-handler",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "wireit",
    "build": "next build --turbopack",
    "lint": "eslint",
    "start": "docker-compose up --build",
    "api-mocks": "wireit",
    "typecheck": "tsc --noEmit"
  },
  "wireit": {
    "api-mocks": {
      "command": "node mocks/server.mjs",
      "service": true,
      "env": {
        "MOCK_API_URL": {
          "external": true,
          "default": "http://localhost:3001"
        }
      }
    },
    "dev": {
      "command": "next dev --turbopack",
      "service": true,
      "dependencies": [
        "api-mocks"
      ],
      "env": {
        "MOCK_API_URL": {
          "external": true,
          "default": "http://localhost:3001"
        }
      }
    }
  },
  "dependencies": {
    "@fortedigital/nextjs-cache-handler": "2.1.0",
    "express": "^5.1.0",
    "morgan": "^1.10.1",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "redis": "^5.8.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wireit": "^0.14.12"
  }
}
